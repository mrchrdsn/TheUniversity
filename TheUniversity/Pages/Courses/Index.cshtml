@page
@model TheUniversity.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Course List Page";
}

<h1>Course List Page</h1>

<p>
    <a asp-page="Create">Create New Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Credits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CourseID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CourseID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CourseID">Delete</a> |
                <a asp-page="/Assignments/Index" asp-route-id="@item.CourseID">View Assignments</a> |
                <a asp-page="/Assignments/Create" asp-route-id="@item.CourseID">Add Assignment</a>
            </td>
        </tr>
}
    </tbody>
</table>
